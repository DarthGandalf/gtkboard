
AC_INIT(src/)
AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(gtkboard,0.10.2)
AC_PROG_CC


# check if user has gtk2
PKG_CHECK_MODULES(GTK, gtk+-2.0 >= 2.0.0, found_gtk2=1, found_gtk2=0)

if test $found_gtk2 = 0; then
	AM_PATH_GTK(1.2.3, , AC_MSG_ERROR(gretools needs GTK 1.2.3 or higher))
fi

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST

dnl Checks for library functions.
AC_TYPE_SIGNAL
AC_CHECK_FUNCS(mkdir strtol)



AC_OUTPUT([
		Makefile
		doc/Makefile
		src/Makefile
		])
